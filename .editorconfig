; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 4

[*.md]
max_line_length = 120
trim_trailing_whitespace = false

[Makefile,Makefile.dist,*.mk]
indent_style = tab
