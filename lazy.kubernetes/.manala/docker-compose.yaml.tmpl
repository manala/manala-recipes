version: "3.7"

services:

  ##############
  # Kubernetes #
  ##############

  kubernetes:
    hostname: kubernetes
    build:
      context: .
      target: kubernetes
    user: lazy
    {{- if .Vars.system.kubeconfig }}
    environment:
      KUBECONFIG: ${_DOCKER_WORKDIR}/{{ .Vars.system.kubeconfig }}
    {{- end }}
    volumes:
      - .home:/home:delegated
      - ..:/${_DOCKER_WORKDIR}:cached
    working_dir: ${_DOCKER_WORKDIR}
    network_mode: bridge # Use default docker bridge network
